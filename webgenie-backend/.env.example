# FastAPI Server Configuration
DEBUG=False
LOG_LEVEL=INFO
API_V1_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://127.0.0.1:3000", "http://127.0.0.1:5173"]

# Database
DATABASE_URL=sqlite:///./webgenie.db

# Redis & Celery
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# File Paths
DATA_DIR=/data
RESULTS_DIR=/data/results
DATASETS_DIR=/data/datasets
TEMP_DIR=/tmp/webgenie

# Job Configuration
MAX_CONCURRENT_JOBS=4
JOB_TIMEOUT_SECONDS=86400
POLL_INTERVAL_SECONDS=5

# Upload Configuration
MAX_UPLOAD_SIZE=524288000  # 500MB

# Algorithm Configuration
ALGORITHM_TIMEOUT=86400
ALGORITHM_MEMORY_LIMIT=8g

# Docker Configuration
USE_DOCKER=True
DOCKER_REGISTRY=grnbeeline

# HuggingFace Configuration
HF_DATASET_ORG=cskokgibbs
HF_DATASET_PREFIX=datasets
HF_TOKEN=your-hf-token-here

# Logging
LOG_FORMAT=json
LOG_FILE=/var/log/webgenie/app.log
