# WebGenie - Choreo Cloud Deployment Configuration

# ==================== SERVER CONFIGURATION ====================
DEBUG=False
LOG_LEVEL=INFO

# ==================== DATABASE CONFIGURATION ====================
# Use managed database from Choreo or external PostgreSQL service
DB_USER=webgenie_choreo
DB_PASSWORD=${CHOREO_DB_PASSWORD}
DB_NAME=webgenie_choreo_db
DB_HOST=${CHOREO_DB_HOST}
DB_PORT=5432

# ==================== FRONTEND CONFIGURATION ====================
# Will be set by Choreo deployment
VITE_API_URL=${CHOREO_API_URL}/api/v1
NODE_ENV=production

# ==================== JOB CONFIGURATION ====================
MAX_CONCURRENT_JOBS=8
JOB_TIMEOUT_SECONDS=86400

# ==================== HUGGINGFACE CONFIGURATION ====================
HF_TOKEN=${CHOREO_HF_TOKEN}

# ==================== DOCKER CONFIGURATION ====================
USE_DOCKER=True
DOCKER_REGISTRY=grnbeeline

# ==================== REDIS CONFIGURATION ====================
REDIS_URL=redis://${CHOREO_REDIS_HOST}:6379/0
CELERY_BROKER_URL=redis://${CHOREO_REDIS_HOST}:6379/1
CELERY_RESULT_BACKEND=redis://${CHOREO_REDIS_HOST}:6379/2

# ==================== CORS CONFIGURATION ====================
CORS_ORIGINS=${CHOREO_FRONTEND_URL},${CHOREO_BACKEND_URL}
